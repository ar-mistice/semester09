import os.path
import itertools

Import("env")

sources = Glob("*.pml", strings=True)

env.Command("pan.c", sources, "spin -a main.pml", chdir=True)
#env.Command("pan", "pan.c", "cc -DSAFETY -o pan pan.c", chdir=True)
env.Command("pan", "pan.c", "cc -o pan pan.c", chdir=True)
